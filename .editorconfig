
# Global configuration
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = 2
trim_trailing_whitespace = true

# Markdown and txt extension
[*.{md,txt}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

# TypeScript and JS extensions (tsx and jsx too)
[*.{ts{,x},js{,x}}]
indent_style = space
indent_size = 2
